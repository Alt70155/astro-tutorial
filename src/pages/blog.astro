---
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPost from "../components/BlogPost.astro";
const allPosts = await Astro.glob("../pages/posts/*.md");
const newestedPosts = allPosts.sort((a, b) => a.frontmatter.pubDate < b.frontmatter.pubDate ? 1 : -1)
const pageTitle = "ブログ";
---

<BaseLayout pageTitle={pageTitle}>
  <p>ここには、私がAstroを学んでいく旅の様子を投稿します。</p>
  <ul>
    {
      newestedPosts.map((post) => (
        <BlogPost title={post.frontmatter.title} url={post.url} pubDate={post.frontmatter.pubDate} />
      ))
    }
  </ul>
</BaseLayout>
